<Controls:MetroWindow
  x:Class="FlexID.Viewer.Views.MainWindow"
  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  xmlns:Controls="http://metro.mahapps.com/winfx/xaml/controls"
  xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
  xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
  xmlns:icons="http://metro.mahapps.com/winfx/xaml/iconpacks"
  xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
  xmlns:oxy="http://oxyplot.org/wpf"
  xmlns:prism="http://prismlibrary.com/"
  xmlns:v="clr-namespace:FlexID.Viewer.Views"
  xmlns:vb="clr-namespace:FlexID.Viewer.Views.Behaviors"
  xmlns:vm="clr-namespace:FlexID.Viewer.ViewModels"
  Title="FlexID_Viewer"
  Width="1200"
  Height="800"
  MinWidth="1200"
  MinHeight="800"
  d:DataContext="{d:DesignInstance Type={x:Type vm:MainWindowViewModel}}"
  prism:ViewModelLocator.AutoWireViewModel="True"
  PreviewKeyDown="MetroWindow_PreviewKeyDown"
  TitleCharacterCasing="Normal"
  WindowStartupLocation="CenterScreen"
  mc:Ignorable="d">

  <Controls:MetroWindow.Resources>
    <Style
      x:Key="MyColumnHeader"
      BasedOn="{StaticResource MahApps.Styles.DataGridColumnHeader}"
      TargetType="{x:Type DataGridColumnHeader}">
      <Setter Property="Controls:ControlsHelper.ContentCharacterCasing" Value="Normal" />
    </Style>
  </Controls:MetroWindow.Resources>

  <Controls:MetroWindow.InputBindings>
    <KeyBinding
      Key="O"
      Command="{Binding SelectOutputFilePathCommand}"
      Modifiers="Ctrl" />
  </Controls:MetroWindow.InputBindings>

  <i:Interaction.Behaviors>
    <vb:PathDropBehavior AllowDropPath="SingleAny" DropCommand="{Binding SelectOutputFilePathCommand}" />
  </i:Interaction.Behaviors>

  <Grid
    Grid.Row="0"
    Grid.Column="0"
    Grid.ColumnSpan="2"
    Margin="20">

    <Grid.RowDefinitions>
      <RowDefinition Height="50" />
      <RowDefinition Height="8" />

      <RowDefinition Height="Auto" MinHeight="30" />
      <RowDefinition Height="Auto" MinHeight="8" />
      <RowDefinition Height="Auto" MinHeight="30" />
      <RowDefinition Height="Auto" MinHeight="8" />
      <RowDefinition Height="Auto" MinHeight="30" />

      <RowDefinition Height="*" />
    </Grid.RowDefinitions>
    <Grid.ColumnDefinitions>
      <ColumnDefinition Width="100" />
      <ColumnDefinition Width="8" />
      <ColumnDefinition Width="Auto" MinWidth="240" />
      <ColumnDefinition Width="2*" />
      <ColumnDefinition Width="3*" />
    </Grid.ColumnDefinitions>

    <Grid.Resources>
      <Style
        x:Key="OutputInfoTextBox"
        BasedOn="{StaticResource MahApps.Styles.TextBox}"
        TargetType="TextBox">
        <Setter Property="FontSize" Value="14" />
        <Setter Property="IsReadOnly" Value="True" />
        <Style.Triggers>
          <DataTrigger Binding="{Binding Text, RelativeSource={RelativeSource Self}}" Value="">
            <Setter Property="IsEnabled" Value="False" />
          </DataTrigger>
        </Style.Triggers>
      </Style>

      <Style
        x:Key="OutputInfoComboBox"
        BasedOn="{StaticResource MahApps.Styles.ComboBox}"
        TargetType="ComboBox">
        <Setter Property="FontSize" Value="14" />
        <Style.Triggers>
          <DataTrigger Binding="{Binding HasItems, RelativeSource={RelativeSource Self}}" Value="False">
            <Setter Property="IsEnabled" Value="False" />
          </DataTrigger>
          <DataTrigger Binding="{Binding Items.Count, RelativeSource={RelativeSource Self}}" Value="1">
            <Setter Property="Template">
              <Setter.Value>
                <ControlTemplate TargetType="ComboBox">
                  <TextBox
                    FontSize="{TemplateBinding FontSize}"
                    IsReadOnly="True"
                    Text="{TemplateBinding Text}" />
                </ControlTemplate>
              </Setter.Value>
            </Setter>
          </DataTrigger>
        </Style.Triggers>
      </Style>
    </Grid.Resources>

    <Button
      Grid.Column="0"
      VerticalAlignment="Center"
      Controls:ControlsHelper.ContentCharacterCasing="Normal"
      Command="{Binding SelectOutputFilePathCommand}"
      Content="_Open"
      FontSize="14"
      ToolTip="Open Output file (Ctrl+O)" />

    <Grid Grid.Column="2" Grid.ColumnSpan="3">
      <Grid.ColumnDefinitions>
        <ColumnDefinition Width="*" />
        <ColumnDefinition Width="260" />
      </Grid.ColumnDefinitions>

      <TextBox
        Grid.Column="0"
        Padding="6"
        VerticalAlignment="Center"
        FontSize="14"
        KeyDown="OutputFilePathTextBox_KeyDown"
        Text="{Binding OutputFilePath, UpdateSourceTrigger=Explicit}">
        <i:Interaction.Behaviors>
          <vb:PathPasteBehavior />
        </i:Interaction.Behaviors>
      </TextBox>

      <TabControl
        x:Name="MainTabControl"
        Grid.Column="1"
        HorizontalAlignment="Right"
        VerticalAlignment="Center"
        Style="{StaticResource MahApps.Styles.TabControl.AnimatedSingleRow}">

        <TabItem Header="Model" />
        <TabItem Header="Graph" />
      </TabControl>
    </Grid>

    <Label
      Grid.Row="2"
      Grid.Column="0"
      Content="_Title"
      FontSize="14"
      Target="{Binding ElementName=TitleTextBox}" />
    <TextBox
      x:Name="TitleTextBox"
      Grid.Row="2"
      Grid.Column="2"
      Grid.ColumnSpan="2"
      Style="{StaticResource OutputInfoTextBox}"
      Text="{Binding SelectedOutput.Title, Mode=OneWay}" />

    <Label
      Grid.Row="4"
      Grid.Column="0"
      Content="_Output Type"
      FontSize="14"
      Target="{Binding ElementName=OutputTypeComboBox}" />
    <ComboBox
      x:Name="OutputTypeComboBox"
      Grid.Row="4"
      Grid.Column="2"
      ItemsSource="{Binding OutputTypes}"
      SelectedItem="{Binding SelectedOutputType}"
      Style="{StaticResource OutputInfoComboBox}" />

    <Label
      Grid.Row="6"
      Grid.Column="0"
      VerticalAlignment="Center"
      Content="_Nuclides"
      FontSize="14"
      Target="{Binding ElementName=NuclidesComboBox}" />
    <ComboBox
      x:Name="NuclidesComboBox"
      Grid.Row="6"
      Grid.Column="2"
      DisplayMemberPath="Header"
      ItemsSource="{Binding SelectedOutput.Blocks}"
      SelectedItem="{Binding SelectedBlock}"
      Style="{StaticResource OutputInfoComboBox}" />

    <TabControl
      Grid.Row="7"
      Grid.Column="0"
      Grid.ColumnSpan="3"
      Margin="70,16,0,70"
      SelectedIndex="{Binding SelectedIndex, ElementName=MainTabControl}"
      Style="{StaticResource MahApps.Styles.TabControl.AnimatedSingleRow}">

      <!--  Model  -->
      <TabItem>
        <DataGrid
          AutoGenerateColumns="False"
          BorderBrush="Black"
          BorderThickness="1"
          CanUserReorderColumns="False"
          CanUserResizeColumns="False"
          CanUserSortColumns="False"
          ColumnHeaderStyle="{StaticResource MyColumnHeader}"
          FontSize="14"
          ItemsSource="{Binding Contour.DataValues, UpdateSourceTrigger=PropertyChanged}"
          SelectionUnit="Cell">
          <DataGrid.Columns>
            <DataGridTextColumn
              Width="120"
              Binding="{Binding OrganName, UpdateSourceTrigger=PropertyChanged}"
              Header="Organ"
              IsReadOnly="True" />
            <DataGridTextColumn
              Width="100"
              Binding="{Binding Value, StringFormat=\{0:0.000000E+00\}, UpdateSourceTrigger=PropertyChanged}"
              Header="Value"
              IsReadOnly="True" />
          </DataGrid.Columns>
        </DataGrid>
      </TabItem>

      <!--  Graph  -->
      <TabItem>
        <DataGrid
          AutoGenerateColumns="False"
          BorderBrush="Black"
          BorderThickness="1"
          CanUserAddRows="False"
          CanUserReorderColumns="False"
          CanUserResizeColumns="False"
          CanUserSortColumns="False"
          ColumnHeaderStyle="{StaticResource MyColumnHeader}"
          FontSize="14"
          ItemsSource="{Binding Graph.Regions}">
          <DataGrid.Columns>
            <DataGridTemplateColumn
              MinWidth="240"
              Header="Organ"
              IsReadOnly="True">
              <DataGridTemplateColumn.HeaderStyle>
                <Style BasedOn="{StaticResource MyColumnHeader}" TargetType="DataGridColumnHeader">
                  <Setter Property="Padding" Value="40,0,0,0" />
                </Style>
              </DataGridTemplateColumn.HeaderStyle>
              <DataGridTemplateColumn.CellStyle>
                <Style BasedOn="{StaticResource MahApps.Styles.DataGridCell}" TargetType="DataGridCell">
                  <Setter Property="Focusable" Value="False" />
                  <Setter Property="Template">
                    <Setter.Value>
                      <ControlTemplate TargetType="DataGridCell">
                        <CheckBox
                          Padding="4,0,0,2"
                          Content="{Binding Name}"
                          IsChecked="{Binding IsVisible, UpdateSourceTrigger=PropertyChanged}" />
                      </ControlTemplate>
                    </Setter.Value>
                  </Setter>
                </Style>
              </DataGridTemplateColumn.CellStyle>
            </DataGridTemplateColumn>
          </DataGrid.Columns>
        </DataGrid>
      </TabItem>
    </TabControl>

    <TabControl
      Grid.Row="2"
      Grid.RowSpan="6"
      Grid.Column="3"
      Grid.ColumnSpan="3"
      SelectedIndex="{Binding SelectedIndex, ElementName=MainTabControl}"
      Style="{StaticResource MahApps.Styles.TabControl.AnimatedSingleRow}">

      <!--  Model  -->
      <TabItem>
        <Grid>
          <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
          </Grid.RowDefinitions>
          <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition Width="Auto" />
          </Grid.ColumnDefinitions>

          <Viewbox Stretch="Uniform">
            <Grid>
              <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition />
              </Grid.ColumnDefinitions>

              <v:HumanContourLegend
                Grid.Column="0"
                Margin="20,48,20,12"
                HorizontalAlignment="Center"
                DataContext="{Binding Contour}" />

              <v:HumanContour
                Grid.Column="1"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                DataContext="{Binding Contour}" />
            </Grid>
          </Viewbox>

          <v:ColorScaleBar
            Grid.RowSpan="2"
            Grid.Column="1"
            Margin="0,0,0,60"
            VerticalAlignment="Center"
            ContourMax="{Binding Contour.ContourMax}"
            ContourMin="{Binding Contour.ContourMin}"
            ContourUnit="{Binding Contour.ContourUnit}"
            FontSize="14" />

          <Grid Grid.Row="1" HorizontalAlignment="Stretch">
            <Grid.RowDefinitions>
              <RowDefinition Height="Auto" />
              <RowDefinition Height="Auto" />
              <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
              <ColumnDefinition Width="2*" />
              <ColumnDefinition />
              <ColumnDefinition />
              <ColumnDefinition />
              <ColumnDefinition Width="2*" />
            </Grid.ColumnDefinitions>

            <Slider
              x:Name="TimeStepSlider"
              Grid.Row="0"
              Grid.ColumnSpan="5"
              Height="32"
              Margin="70,0"
              d:Maximum="18250"
              d:Minimum="0"
              AutoToolTipPlacement="BottomRight"
              FontSize="14"
              IsMoveToPointEnabled="True"
              IsSnapToTickEnabled="True"
              Maximum="{Binding Contour.EndTimeStep}"
              Minimum="{Binding Contour.StartTimeStep}"
              Ticks="{Binding Contour.TimeSteps}"
              Value="{Binding Contour.CurrentTimeStep}" />

            <Label
              Grid.Row="1"
              Grid.Column="0"
              HorizontalAlignment="Center"
              Content="{Binding Minimum, ElementName=TimeStepSlider}" />
            <Label
              Grid.Row="1"
              Grid.Column="4"
              HorizontalAlignment="Center"
              Content="{Binding Maximum, ElementName=TimeStepSlider}" />

            <RepeatButton
              Grid.Row="1"
              Grid.Column="1"
              Width="40"
              Height="32"
              HorizontalAlignment="Center"
              VerticalAlignment="Top"
              Command="{Binding Contour.PreviousStepCommand}"
              ToolTip="Previous step">
              <icons:PackIconMaterial Kind="SkipPrevious" />
            </RepeatButton>
            <Button
              Grid.Row="1"
              Grid.Column="2"
              Width="40"
              Height="32"
              HorizontalAlignment="Center"
              VerticalAlignment="Top"
              Command="{Binding Contour.PlayCommand}"
              FontSize="12"
              ToolTip="Play/Pause">
              <icons:PackIconMaterial>
                <icons:PackIconMaterial.Style>
                  <Style TargetType="{x:Type icons:PackIconMaterial}">
                    <Setter Property="Kind" Value="Play" />
                    <Style.Triggers>
                      <DataTrigger Binding="{Binding Contour.IsPlaying}" Value="False">
                        <Setter Property="Kind" Value="Play" />
                      </DataTrigger>
                      <DataTrigger Binding="{Binding Contour.IsPlaying}" Value="True">
                        <Setter Property="Kind" Value="Pause" />
                      </DataTrigger>
                    </Style.Triggers>
                  </Style>
                </icons:PackIconMaterial.Style>
              </icons:PackIconMaterial>
            </Button>
            <RepeatButton
              Grid.Row="1"
              Grid.Column="3"
              Width="40"
              Height="32"
              HorizontalAlignment="Center"
              VerticalAlignment="Top"
              Command="{Binding Contour.NextStepCommand}"
              ToolTip="Next step">
              <icons:PackIconMaterial Kind="SkipNext" />
            </RepeatButton>

            <StackPanel
              Grid.Row="2"
              Grid.Column="2"
              Orientation="Vertical">
              <TextBlock
                Height="22"
                MinWidth="100"
                HorizontalAlignment="Center"
                FontSize="14"
                Text="{Binding Value, ElementName=TimeStepSlider}"
                TextAlignment="Center" />
              <TextBlock
                Height="22"
                HorizontalAlignment="Center"
                FontSize="14"
                Text="[Day]" />
            </StackPanel>
          </Grid>
        </Grid>
      </TabItem>

      <!--  Graph  -->
      <TabItem>
        <Grid>
          <Grid.RowDefinitions>
            <RowDefinition Height="50" />
            <RowDefinition />
          </Grid.RowDefinitions>

          <StackPanel HorizontalAlignment="Right" Orientation="Horizontal">
            <CheckBox
              Height="18"
              Margin="0,0,40,0"
              VerticalAlignment="Center"
              Content="Log(_Vertical)"
              IsChecked="{Binding Graph.IsLogAxisY}" />
            <CheckBox
              Height="18"
              Margin="0,0,40,0"
              VerticalAlignment="Center"
              Content="Log(_Horizontal)"
              IsChecked="{Binding Graph.IsLogAxisX}" />
          </StackPanel>

          <oxy:PlotView
            Grid.Row="1"
            FontSize="14"
            Model="{Binding Graph.PlotModel}" />
        </Grid>
      </TabItem>
    </TabControl>
  </Grid>

</Controls:MetroWindow>
